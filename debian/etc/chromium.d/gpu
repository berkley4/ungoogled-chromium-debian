## Refer to chrome://gpu/ to see if there are any problems
## Note: the uncommented flags will probably work for most users

# For those using wayland (not X11)
#export CHROMIUM_FLAGS="$CHROMIUM_FLAGS --ozone-platform-hint=wayland"

# WebGPU
#export CHROMIUM_FLAGS="$CHROMIUM_FLAGS --enable-unsafe-webgpu"
#export CHROMIUM_FLAGS="$CHROMIUM_FLAGS --enable-skia-graphite"

# Skia graphite (dawn-swiftshader, dawn-vulkan, dawn-metal or metal)
#export CHROMIUM_FLAGS="$CHROMIUM_FLAGS --skia-graphite-backend=dawn-vulkan"

# Vulkan
#export CHROMIUM_FLAGS="$CHROMIUM_FLAGS --use-angle=vulkan"
#export CHROMIUM_FLAGS="$CHROMIUM_FLAGS --use-vulkan"
#export CHROMIUM_FLAGS="$CHROMIUM_FLAGS --disable-vulkan-surface"

# GL
#export CHROMIUM_FLAGS="$CHROMIUM_FLAGS --use-angle=gl"


# For troubleshooting problems or attempting to increase performance
#export CHROMIUM_FLAGS="$CHROMIUM_FLAGS --disable-gpu"
#export CHROMIUM_FLAGS="$CHROMIUM_FLAGS --disable-gpu-driver-bug-workarounds"
#export CHROMIUM_FLAGS="$CHROMIUM_FLAGS --ignore-gpu-blocklist"
#export CHROMIUM_FLAGS="$CHROMIUM_FLAGS --canvas-oop-rasterization"
#export CHROMIUM_FLAGS="$CHROMIUM_FLAGS --enable-drdc"
#export CHROMIUM_FLAGS="$CHROMIUM_FLAGS --enable-gpu-rasterization"
#export CHROMIUM_FLAGS="$CHROMIUM_FLAGS --enable-hardware-overlays"
#export CHROMIUM_FLAGS="$CHROMIUM_FLAGS --enable-native-gpu-memory-buffers"
#export CHROMIUM_FLAGS="$CHROMIUM_FLAGS --enable-raw-draw"
#export CHROMIUM_FLAGS="$CHROMIUM_FLAGS --enable-zero-copy"
#export CHROMIUM_FLAGS="$CHROMIUM_FLAGS --num-raster-threads=2"


# Enable purging stale entries in the GrShader disk cache on program start
#export CHROMIUM_FLAGS="$CHROMIUM_FLAGS --enable-features=ClearGrShaderDiskCacheOnInvalidPrefix"

# Enables shared GPUImageDecodeCache for UI if gpu rasterization is enabled
#export CHROMIUM_FLAGS="$CHROMIUM_FLAGS --ui-enable-shared-image-cache-for-gpu"

# This might help with eg google streetview on very old GPUs
#export CHROMIUM_FLAGS="$CHROMIUM_FLAGS --disable-accelerated-2d-canvas"
