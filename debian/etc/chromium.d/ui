# Start with a maximised (non-fullscreen) window
export CHROMIUM_FLAGS="$CHROMIUM_FLAGS --start-maximized"

# Opens popups as tabs instead
#export CHROMIUM_FLAGS="$CHROMIUM_FLAGS --popups-to-tabs"

# Disables JavaScript dialog boxes triggered by 'beforeunload'
# Often used to maliciously/annoyingly trigger a popup when closing a tab
#export CHROMIUM_FLAGS="$CHROMIUM_FLAGS --disable-beforeunload"

# Switch tabs with the scroll wheel when hovering over the tab strip
# Choices are: always, never, incognito-and-guest
#export CHROMIUM_FLAGS="$CHROMIUM_FLAGS --scroll-tabs=never"

# Disable system notifications
#export CHROMIUM_FLAGS="$CHROMIUM_FLAGS --disable-features=SystemNotifications"


# Enable dark modes
#export CHROMIUM_FLAGS="$CHROMIUM_FLAGS --force-dark-mode"
#export CHROMIUM_FLAGS="$CHROMIUM_FLAGS --web-ui-dark-mode"

# Prevents link/text dragging and allows selecting text within links
# Also allows text selection without first clearing an existing selection
#export CHROMIUM_FLAGS="$CHROMIUM_FLAGS --enable-features=DisableLinkDrag"

# Choices: search, search-bookmarks, search-chrome, search-bookmarks-chrome
#export CHROMIUM_FLAGS="$CHROMIUM_FLAGS --omnibox-autocomplete-filtering=search-chrome"


# Sets visibility of the avatar button.
# Choices are: always, incognito-and-guest or never
export CHROMIUM_FLAGS="$CHROMIUM_FLAGS --show-avatar-button=never"

# Enable the chrome labs button/menu.
#export CHROMIUM_FLAGS="$CHROMIUM_FLAGS --chrome-labs"

# Hides the bookmark bar in new tab pages
#export CHROMIUM_FLAGS="$CHROMIUM_FLAGS --bookmark-bar-ntp=none"

# This includes the puzzle piece icon as well as any pinned extensions.
#export CHROMIUM_FLAGS="$CHROMIUM_FLAGS --hide-extensions-menu"

# Hide the "Press Esc to exit full screen" message
#export CHROMIUM_FLAGS="$CHROMIUM_FLAGS --hide-fullscreen-exit-ui"

# Disables the QR generator for sharing page links
#export CHROMIUM_FLAGS="$CHROMIUM_FLAGS --enable-features=DisableQRGenerator"

# Disables the sharing hub button
#export CHROMIUM_FLAGS="$CHROMIUM_FLAGS --disable-sharing-hub"

# Hide the side panel button
export CHROMIUM_FLAGS="$CHROMIUM_FLAGS --hide-sidepanel-button"

# Hide tab close buttons
#export CHROMIUM_FLAGS="$CHROMIUM_FLAGS --hide-tab-close-buttons"

# Disables tab hover cards
#export CHROMIUM_FLAGS="$CHROMIUM_FLAGS --tab-hover-cards=none"

# Remove the tabsearch button
#export CHROMIUM_FLAGS="$CHROMIUM_FLAGS --remove-tabsearch-button"
